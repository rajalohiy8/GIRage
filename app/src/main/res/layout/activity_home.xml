<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            >


            <Button
                android:id="@+id/panic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/panic"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="80dp"/>

            <TextView
                android:elevation="5dp"
                android:id="@+id/spanic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panic Button"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <Button
                android:id="@+id/safe"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/safe"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:elevation="5dp"
                android:id="@+id/ssafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Button"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <Button
                android:id="@+id/Emergencycontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Add Emergency Contact"
                android:elevation="3dp"
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/Nearbyplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Near By Places"
                android:elevation="3dp"
                android:background="#ffffff"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/Emergencycon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Emergency Contacts"
                android:elevation="3dp"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/Connectwith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Connect with us"
                android:elevation="3dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_home_drawer" />

</android.support.v4.widget.DrawerLayout>
